    <% var listeAdi,tarih; %>

    <div class="container ">
      <div class="row  row-cols-lg-2 row-cols-md-2 row-cols-sm-1">
        <!-- row-cols-lg-2 row-cols-md-2 row-cols-sm-2 -->
        <div class="col mx-auto">
          <div class="card border-secondary ms-0">
            <div class="card-header text-center">
              <h6><%= tarih %> Listesi </h6>
            </div>
            <div class="card-body text-secondary">
              <!-- <h5 class="card-title"></h5> -->
              <div class="list-group list-group-flush">

                <% for(let i=0;i<listeAdi.length;i++) { %>
                <% let istekListe=listeAdi[i].split(" ").join("-") %>

                <div class="list-group-item">
                  <input class="form-check-input me-3" type="checkbox" value="">
                  <a href="#" class="liste-adi" data-id=<%= istekListe %> aria-current="true">
                    <%= listeAdi[i] %>
                  </a>
                </div>
                <% } %>
                <%  listeAdi=[]; %>
              </div>
            </div>
