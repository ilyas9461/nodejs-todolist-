  <!-- Modal Kaydet-->
  <div class="modal fade" id="kaydetModal" tabindex="-1" aria-labelledby="kaydetModal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="kaydetModalLabel">Görev Kaydet</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/list-insert" method="POST" id="kaydetForm">
            <div class="input-group mb-3">
              <span class="input-group-text" id="inputGroup-sizing-default">Görev Başlığı</span>
              <input type="text" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default" name="gBaslik" required>
            </div>

            <div class="input-group mb-3">
              <label class="input-group-text" for="inputGroupSelect01">Kategori</label>
              <select class="form-select" id="inputGroupSelect01" name="kategori" required>
                <option selected>Seçiminiz</option>
                <option value="1">Günlük</option>
                <option value="2">Kişisel</option>
                <option value="3">Alış Veriş</option>
                <option value="4">Projeler</option>
              </select>
            </div>
            <div class="input-group mb-3">
              <label class="input-group-text" for="inputGroupSelect01">Öncelik</label>
              <select class="form-select" id="inputGroupSelect01" name="oncelik" required>
                <option selected>Seçiminiz</option>
                <option value="1">Çok Önemli</option>
                <option value="2">Önemli</option>
                <option value="3">Normal</option>
                <option value="4">Düşük</option>
              </select>
            </div>
            <div class="input-group mb-3">
              <label class="input-group-text" for="inputGroupSelect01">Tarih/Zaman</label>
              <input type="datetime-local" class="form-control" id="daytime" name="tarZmn" required>
            </div>
            <div class="input-group">
              <span class="input-group-text">Görev Açıklaması</span>
              <textarea class="form-control" aria-label="With textarea" rows="4" name="aciklama" required></textarea>
            </div>

            <!-- Submit button -->
            <div class="d-grid gap-1 d-md-flex justify-content-md-end mt-5" id="gonBtn">
              <!-- <input type="submit" class="btn btn-primary btn-block mb-4"> -->
              <input type="submit" id="gonBtn" class="btn btn-primary btn-block mb-4">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="aciklamaModal" tabindex="-1" aria-labelledby="aciklamaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="aciklamaModalLabel">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <!-- <p class="aciklama modal-header"></p> -->
          <table class="table table-success table-striped table-bordered">
            <caption>Görev Özellikleri</caption>
            <tbody>
              <tr>
                <th scope="row">Açıklama</th>
                <td id="td-aciklama">...</td>

              </tr>
              <tr>
                <th scope="row">Öncelik</th>
                <td id="td-oncelik">...</td>
              </tr>
              <tr>
                <th scope="row">Kategori</th>
                <td id="td-kategori">...</td>
              </tr>
              <tr>
                <th scope="row">Tarih</th>
                <td id="td-tarih">...</td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
          <!-- <button type="button" class="btn btn-primary">Sil...</button> -->
          <form action="/delete" method="post">
            <button type="submit" class="btn btn-primary" id="liste-sil" value="" name="btnSil">Sil...</button>
          </form>

        </div>
      </div>
    </div>
