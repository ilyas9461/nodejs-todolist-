  <script src="./js/calendar.js"></script>

  <script>
    function selectDate(date) {
      $('.calendar-wrapper').updateCalendarOptions({
        date: date
      });
    }

    var defaultConfig = {
      weekDayLength: 1,
      date: new Date(),
      onClickDate: selectDate,
      showYearDropdown: true,
    };

    $('.calendar-wrapper').calendar(defaultConfig);
  </script>

  <script>
    $('a.liste-adi').click(function (e) {
      e.preventDefault(); //event olştuğunda html tag ait özellik gereği yapılması gereken
                          //işlemi iptal eder. Örn linke gidilmez.

      var modalAciklama = $('#aciklamaModal');
      var link = $(this).closest('a'); //linki seçer

      modalAciklama.find('.modal-title').text(link.data('id'));

      $.getJSON('/liste/' + link.data('id'), function (data) {
        //app.get("/liste/:listeAdi" JQuery ile istek yapılıyor
        let objList = JSON.parse(data);
        console.log(objList);
        modalAciklama.find('#td-aciklama').text(objList.aciklama);
        modalAciklama.find('#td-oncelik').text(objList.oncelik);
        modalAciklama.find('#td-kategori').text(objList.kategori);
        let tarih = objList.tarih.replace('T', ' ');
        tarih = tarih.replace('.000Z', ' ');
        modalAciklama.find('#td-tarih').text(tarih);
        // modalAciklama.find('#liste-sil').attr('action','/delete/'+objList.id);
        modalAciklama.find('#liste-sil').attr('value', objList.id);

        // modalAciklama.find('.modal-body').html("<p>Açıklama : " + objList.aciklama+"</p>"
        //                                       );
        modalAciklama.modal('show');

      });

    });
  </script>
  

